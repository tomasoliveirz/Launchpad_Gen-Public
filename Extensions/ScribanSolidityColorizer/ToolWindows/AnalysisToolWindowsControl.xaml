<UserControl x:Class="ScribanSolidityColorizer.ToolWindows.AnalysisToolWindowsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.BackgroundKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <UserControl.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>
        <StackPanel Orientation="Vertical" CanVerticallyScroll="True">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Name="CopyButton" Content="Copy" Margin="0,0,5,0" Click="CopyButton_Click" Background="Transparent" Foreground="White"/>
                <Button Name="ClearButton" Content="Clear" Click="ClearButton_Click" Background="Transparent" Foreground="White"/>
            </StackPanel>
            <TextBox Background="Transparent" Margin="5, 0, 00, 20" FontSize="16" FontWeight="Black" Name="AnalysisTitle"  BorderThickness="0" Foreground="White"></TextBox>
            <TextBox Background="Transparent" Margin="15, 0, 0, 0" FontSize="14" FontWeight="Black" BorderThickness="0" Foreground="White">Features</TextBox>
            <TextBox Background="Transparent" Margin="25, 10, 0, 0" BorderThickness="0" Foreground="White" Name="MainAnalysis" 
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto" 
                         IsReadOnly="True" 
                         AcceptsReturn="True" 
                         Text="Analysis results will appear here." />

            <TextBox Background="Transparent" Margin="15, 0, 0, 0" FontSize="14" FontWeight="Black" BorderThickness="0" Foreground="White">Insights</TextBox>
            <ItemsControl x:Name="Bullets" Margin="15, 10, 30, 0" FontSize="12"
              ItemsSource="{Binding ObservableCollection}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   TextAlignment="Justify"
                       TextWrapping="Wrap" 
                       Margin="10,2,0,2" 
                       Foreground="White" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
</UserControl>
